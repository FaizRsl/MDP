<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.75"
        android:layout_marginTop="10dp">

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Your grid layout contents here -->

        </GridLayout>

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:paddingBottom="15dp">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.75"
        android:orientation="horizontal">

        <!-- Buttons layout -->
        <LinearLayout
            android:id="@+id/buttonLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_weight="0.5"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/addObstacleButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Add Obstacle"
                    android:textSize="8sp" />

                <Button
                    android:id="@+id/dragObstacleButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Drag Obstacle"
                    android:textSize="8sp" />

                <Button
                    android:id="@+id/removeButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Remove"
                    android:textSize="8sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/placeCarButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="8sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:gravity="center"
                    android:text="Place Robot" />

                <Button
                    android:id="@+id/rotateButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="8sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:gravity="center"
                    android:text="Rotate" />

                <Button
                    android:id="@+id/setUpButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="8sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:gravity="center"
                    android:text="Set Up" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/upleftArrow"
                    android:layout_width="56px"
                    android:layout_height="56px"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:src="@drawable/arrow_up_left" />
                <ImageView
                    android:id="@+id/upArrow"
                    android:layout_width="56px"
                    android:layout_height="56px"
                    android:layout_marginLeft="3px"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:src="@drawable/arrow_up" />
                <ImageView
                    android:id="@+id/upRightArrow"
                    android:layout_width="56px"
                    android:layout_height="56px"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:src="@drawable/arrow_up_right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <!--<ImageView
                    android:id="@+id/leftArrow"
                    android:layout_width="56px"
                    android:layout_height="56px"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:src="@drawable/arrow_left" />
                    -->
                <Button
                    android:id="@+id/btnRound"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:layout_marginLeft="120dp"
                    android:text="SS"
                    android:textSize="8sp"
                    android:background="@drawable/baseline_circle_24"
                    android:textColor="#FFF"/>
                <!--<ImageView
                    android:id="@+id/rightArrow"
                    android:layout_width="56px"
                    android:layout_height="56px"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:src="@drawable/arrow_right" />-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/downLeftArrow"
                    android:layout_width="56px"
                    android:layout_height="56px"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:src="@drawable/arrow_down_left" />
                <ImageView
                    android:id="@+id/downArrow"
                    android:layout_width="56px"
                    android:layout_height="56px"
                    android:layout_marginTop="15px"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:src="@drawable/arrow_down" />
                <ImageView
                    android:id="@+id/downRightArrow"
                    android:layout_width="56px"
                    android:layout_height="56px"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:src="@drawable/arrow_down_right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
            </LinearLayout>



        </LinearLayout>

        <!-- Text areas layout -->
        <LinearLayout
            android:id="@+id/textAreaLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/robotStatusLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Robot Status:"
                android:textColor="@android:color/black"/>

            <EditText
                android:id="@+id/robotStatusTextArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.01"
                android:gravity="top"
                android:enabled="false"
                android:hint="..." />

            <TextView
                android:id="@+id/sendDataLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Send Data:"
                android:textColor="@android:color/black"/>

            <EditText
                android:id="@+id/sendDataTextArea"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:hint="Enter text here" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/sendDataButton"
                    android:layout_width="70dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="40dp"
                    android:textSize="10sp"
                    android:text="Send" />
            </LinearLayout>

            <TextView
                android:id="@+id/receiveDataLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Received Data:"
                android:textColor="@android:color/black"/>

            <EditText
                android:id="@+id/receivedDataTextArea"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="top"
                android:enabled="false"
                android:hint="..." />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
